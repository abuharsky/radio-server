.row
  .span6.offset3
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'form-horizontal', :method => :put }) do |f|
      .control-group
        .controls
          %h2 Edit #{resource_name.to_s.humanize}
          
      .control-group{ :class => "#{ 'error' unless resource.errors[:email].blank? }"}
        = f.label :email, :class => 'control-label'
        .controls
          = f.email_field :email, :autofocus => true, :autocomplete => 'off'
          %span.help-inline #{resource.errors[:email].first}

      .control-group{ :class => "#{ 'error' unless resource.errors[:password].blank? }"}
        = f.label :new_password, :class => 'control-label'
        .controls
          = f.password_field :password, :autocomplete => 'off'
          %span.help-inline #{resource.errors[:password].first}

      .control-group{ :class => "#{ 'error' unless resource.errors[:password_confirmation].blank? }"}
        = f.label :password_confirmation, :class => 'control-label'
        .controls
          = f.password_field :password_confirmation
          %span.help-inline #{resource.errors[:password_confirmation].first}

      .control-group{ :class => "#{ 'error' unless resource.errors[:current_password].blank? }"}
        = f.label :current_password, :class => 'control-label'
        .controls
          = f.password_field :current_password
          %span.help-inline #{resource.errors[:current_password].first}

      .control-group
        .controls
          = f.submit 'Update', :class => 'btn'
