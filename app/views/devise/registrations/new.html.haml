.row
  .span6.offset3
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'form-horizontal' }) do |f|
      .control-group
        .controls
          %h2 Sign up

      .control-group{ :class => "#{ 'error' unless resource.errors[:email].blank? }" }
        = f.label :email, :class => 'control-label'
        .controls
          = f.email_field :email, :autofocus => true, :autocomplete => 'off'
          - if resource.errors[:email]
            %span.help-inline #{resource.errors[:email].first}

      .control-group{ :class => "#{ 'error' unless resource.errors[:password].blank? }" }
        = f.label :password, :class => 'control-label'
        .controls
          = f.password_field :password
          - if resource.errors[:password]
            %span.help-inline #{resource.errors[:password].first}

      .control-group{ :class => "#{ 'error' unless resource.errors[:password_confirmation].blank? }" }
        = f.label :password_confirmation, :class => 'control-label'
        .controls
          = f.password_field :password_confirmation
          - if resource.errors[:password_confirmation]
            %span.help-inline #{resource.errors[:password_confirmation].first}

      .control-group
        .controls
          = f.submit 'Sign up', :class => 'btn'
          
      .control-group
        .controls
          = render 'devise/shared/links'
